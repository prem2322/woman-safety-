<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/LIGHTBLUE">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_corner"
        android:src="@drawable/downloadremovebgpreview" />

    <TextView
    android:id="@+id/welcome_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome!"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="@color/purple_700"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="20dp" />

    <!-- Email Input Field -->
<EditText
android:id="@+id/email_input"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Email Address or mobile number"
android:inputType="textEmailAddress"
android:padding="10dp"
android:layout_marginTop="10dp"
android:background="@drawable/rounded_corner" />

    <!-- Password Input Field -->
<EditText
android:id="@+id/password_input"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:hint="Password"
android:inputType="textPassword"
android:padding="10dp"
android:layout_marginTop="10dp"
android:background="@drawable/rounded_corner"/>

    <!-- Forgot Password -->
<TextView
android:id="@+id/forgot_password"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Forgot password?"
android:textColor="@android:color/holo_blue_dark"
android:layout_gravity="end"
android:layout_marginTop="5dp" />

    <!-- Login Button -->
<Button
android:id="@+id/login_button"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Login"
android:textColor="@color/white"
android:backgroundTint="@color/purple_200"
android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member? Register now"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="shadeLightPurple"
        android:onClick="goToRegister"
        />

<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
android:layout_marginTop="20dp">

<ImageView
    android:id="@+id/google_login"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/google"
    android:background="@null"
    android:contentDescription="Login with Google"
    android:layout_marginEnd="15dp" />

<ImageView
    android:id="@+id/apple_login"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/youtuberemovebgpreview"
    android:background="@null"
    android:contentDescription="subscribe on youtube"
    android:layout_marginEnd="15dp"/>


<ImageView
    android:id="@+id/facebook_login"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:background="@null"
    android:src="@drawable/facebook1"
    android:contentDescription="follow us on facebook"/>
</LinearLayout>

    </LinearLayout>





